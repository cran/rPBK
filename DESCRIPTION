Package: rPBK
Title: Inference and Prediction of Generic Physiologically-Based
        Kinetic Models
Version: 0.2.4
Authors@R: c(
    person("Virgile", "Baudrot", role = c("aut","cre"), email = "virgile.baudrot@qonfluens.com"),
